{
  "extends": "solhint:recommended",
  "rules": {
    "code-complexity": ["error", 8],
    "compiler-version": ["error", ">=0.8.18"],
    "max-line-length": ["error", 120],
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "no-empty-blocks": "off"
  }
}
